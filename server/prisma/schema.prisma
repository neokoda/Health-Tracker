// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @unique @default(autoincrement())
  email String @unique
  fullname String
  password String
}

model Food {
  id Int @id @unique @default(autoincrement())
  food_name String @unique
  amount Float
  calories Float
  carbohydrates Float
  proteins Float
  fats Float
}